@model BlogIT.MVC.ViewModels.ProfileViewModel
@{
    ViewData["Title"] = @Localizer["Title"];
}


<div class="profile-page">

    <div class="page-header page-header-xs settings-background" style="background-image: url('@Url.Content("~/blog.jpg")');">
        <div class="filter"></div>
    </div>


    <div class="profile-content section">
        <div class="container">
            <div class="row">
                <div class="profile-picture">
                    <div class="fileinput text-center fileinput-new" data-provides="fileinput">
                        <div class="fileinput-new img-no-padding">
                            <img src='@Url.Action("GetImage", "File", new { fileID = Model.AvatarID })'>
                        </div>
                        <div class="name">
                            <h4 class="title text-center">
                                <font style="vertical-align: inherit;">
                                    <font style="vertical-align: inherit;">
                                        @Model.UserName
                                    </font>
                                </font><br>
                                       <small>@Model.ShortDescription</small>
                            </h4>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 ml-auto mr-auto text-center">
                    <p>@Model.Description</p>
                    <br>
                    <p>@Localizer["DateOfRegistration"] @Model.DateOfRegistration.ToString("D")</p>
                </div>
            </div>
        </div>
    </div>
</div>